@import 'global'

header
	a:not([href~='/hire'])
		color white

	a[href~='/hire']
		color blue-color
		background-color white

#content
	section
		text-align center

		p
			text-align center

		div
			display flex
			flex-flow column wrap
			justify-content space-between
			text-align center
			margin small-margin auto 0 auto

			a:not(:first-of-type)
				margin-top small-margin

			a
				margin auto
				text-align center
				border-radius 6px
				border-width 2px
				border-style solid
				border-color blue-color
				width 170px
				line-height 54px
				font-family Webly Sleek
				font-weight 300
				background-color none
				color blue-color
				transition()

			a:hover
				background-color blue-color
				color white
