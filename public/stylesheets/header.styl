@import 'global'

header
	background-color blue-color

	#header-content
		margin 0 auto
		padding 0
		width 70%
		display flex
		align-items center
		justify-content space-between

		#menu
			h1
				font-family Webly Sleek
				font-size 2.5em
				color white

			#buttons
				min-width 400px
				display flex
				flex-flow row wrap
				justify-content space-between
				margin-top 40px

				a
					text-align center
					border-radius 6px
					border-width 2px
					border-style solid
					border-color white
					width 110px
					line-height 54px
					font-family Webly Sleek
					font-weight 300
					background-color none
					transition()

				a:hover
					background-color white
					color blue-color

		#photo
			opacity 0.7
			width 350px
			height 350px
			background-size 130%
			background-position 50% 27%
			background-repeat no-repeat
			background-image url('/images/photo.png')

@media (max-width: 1200px)
	header
		#header-content
			width 80%

@media (max-width: 950px)
	header
		#header-content
			width 90%

@media (max-width: 800px)
	header
		#header-content
			width 85%

			#photo
				width 270px
				height 270px

@media (max-width: 750px)
	header
		#header-content
			#menu
				text-align center
				margin 60px auto 60px auto

			#photo
				display none

@media (max-width: 450px)
	header
		#header-content
			#menu
				margin 45px auto 45px auto

				#buttons
					min-width 0
					flex-flow column

					a
						margin 0 auto
						width 150px

					a:not(:first-of-type)
						margin-top 20px
